<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.first.learnenglishwordssmart">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver
            android:name=".receivers.NotificationsReceiver"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SelectionActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.CardsActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.WordsActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".activities.MainActivity" />

        <service
            android:name=".services.DownloadDBService"
            android:exported="false" />

        <provider
            android:name=".providers.WordsProvider"
            android:authorities="com.example.first.learnenglishwordssmart.words.provider"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>